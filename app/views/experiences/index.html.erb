

<div class="banner">
  <div class="banner-info">
    <% if policy(Experience).create? %>
      <%= link_to "create a unique experience", new_experience_path %>
    <% end %>
    <p>
    </p>
  </div>
</div>

  <div class="index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1463194537334-3940784aa69a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
    <div class="container">
      <div class="title-text text-center">
        <h1>Try a new life - Change your life </h1>
        <p> Eager to live your dream for one day?
          Have a look to all the experiences et pick yours!</h2>
      </div>
    </div>
  </div>

  <div class="container-form d-flex justify-content-end align-center-end">
    <%= simple_form_for :query, url: experiences_path, method: :get, :html => {class:"form-inline"} do |f| %>
      <div class="form-group ">
        <div class="display mx-sm-3 mb-2">
        <%= f.input :city, collection: ['Paris', 'Strasbourg', 'Lyon','Pau', 'Bordeaux', 'Toulouse', 'Lille', 'Nantes']  %>
        </div>
        <div class="display mx-sm-3 mb-2">
        <%= f.input :category, collection: ['Ebenist', 'Lawyer', 'Bakery', 'Judge']  %>
        </div>
        <button type="button" class="btn mb-2"><%= f.submit 'Change your life' %> </button>
      </div>
    <% end %>
  </div>

