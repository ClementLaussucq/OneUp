<div class="container-form form-inline">
  <%= simple_form_for :query, url: experiences_path, method: :get, :html => {class:"form-inline"} do |f| %>
    <div class="form-group ">
      <div class="display mx-sm-3 mb-2">
      <%= f.input :city, collection: ['Paris', 'Strasbourg', 'Lyon','Pau', 'Bordeaux', 'Toulouse', 'Lille', 'Nantes']  %>
      </div>
       <div class="display mx-sm-12 mb-2" >
      <%= f.input :category, collection: ['Ebenist', 'Lawyer', 'Bakery', 'Judge']  %>
      </div>
       <%= f.submit 'Change your life', class: "btn-red-filter" %>
    </div>
  <% end %>
</div>

<div class="container-index">
  <div class="cards-exp" >
    <% @experiences.each do |experience| %>
      <div class="card-experience">
        <%= cl_image_tag experience.photo, height: 300, width: 400%>
          <div class="card-experience-infos">
            <div>
              <h3><%= link_to experience.name, new_experience_booking_path(experience) %></h3>
              <p><%= experience.description%></p>
              <p><strong> <%=experience.address %></strong> </p>
            </div>
            <h2 class="card-experience-pricing"><%=experience.price%>â‚¬</h2>
          </div>
      </div>
    <% end %>
  </div>
</div>

