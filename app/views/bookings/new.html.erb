<div class="banner">

<div class="container d-flex justify-content-center align-items-center">
  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "alert-danger" %>
  <% end %>
  <div class="card-booking">
    <img src="https://images.pexels.com/photos/1549003/pexels-photo-1549003.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940">
    <div class="d-flex flex-column align-items-left">
      <div class="row d-flex justify-content-around align-items-center">
            <h2 class="text-center"><%= @experience.name%> </h2>
            <p id="experience-show-address"><i class="fas fa-map-marker-alt">  </i>  <%=@experience.address%></p>
          <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-booking-user avatar-bordered"/>
      </div>
      <div class="row d-flex justify-content-around align-items-center">
          <h3 class='font-weight-bold' id="price-up"><%= "#{@experience.price} â‚¬" %></h3>
      </div>
      <div class="d-flex flex-column justify-content-around align-items-center">
          <h3>A bit more about this experience...</h3>
          <p><%= @experience.description %></p>
      </div>
        <div class="spacing widget-content col-12 d-flex flex-column justify-content-around align-items-center" data-unavailable="<%= @experience.unavailable_dates.to_json %>">
          <%= simple_form_for [@experience, @booking] do |f| %>
            <%= f.input :date, label: "Please select your date:", as: :string, input_html: {class: "datepicker"}  %>
            <%= f.submit "Book now!", class: " btn-margin btn btn-danger w-100" %>
          <% end %>
        </div>

    </div>
      </div>
    </div>
  </div>
</div>
</div>
